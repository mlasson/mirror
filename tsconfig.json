{
  "compilerOptions": {
    "target": "ES5",
    "module": "system",
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "js/",
    "rootDir": "./src/ts",
    "noEmitOnError": true,
    "types": [
      "babylonjs"
    ],
  },
  "exclude": [
    "node_modules",
    ".npm"
  ],
  "include": [
        "src/ts/**/*.ts"
]
}